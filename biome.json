{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "ignore": [
      "*.res.mjs",
      "dist",
      "lib",
      ".nx",
      "node_modules",
      "docs",
      "vite.config.ts.timestamp-*"
    ],
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "ignore": [
      "*.res.mjs",
      "dist",
      "lib",
      ".nx",
      "node_modules",
      "docs",
      "vite.config.ts.timestamp-*"
    ],
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  }
}
